# IMAP Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password
IMAP_TLS=true

# Sync Settings
SYNC_INTERVAL=300000

# AI Models (using Simon Willison's LLM CLI with Qwen models)
LLM_MODEL=qwen2.5:3b
EMBEDDING_MODEL=sentence-transformers/Qwen/Qwen3-Embedding-0.6B

# RAG Pipeline
CHUNK_SIZE=512
CHUNK_OVERLAP=50